<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.milan.deaftelephone.Ac6">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:width="300dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/insert"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:hint="Insert text here"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/next"
        android:height="80dp"
        android:layout_below="@+id/insert"
        android:layout_alignLeft="@+id/insert"
        android:layout_alignStart="@+id/insert"
        android:layout_marginTop="95dp"
        android:layout_alignRight="@+id/insert"
        android:layout_alignEnd="@+id/insert"
        android:textSize="35dp"
        android:onClick="onClickNext"
        android:theme="@style/RtlOverlay.Widget.AppCompat.SearchView.MagIcon"
        android:textColor="#000dff"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:background="#ffc260" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:id="@+id/clear"
        android:layout_below="@+id/next"
        android:layout_alignLeft="@+id/next"
        android:layout_alignStart="@+id/next"
        android:layout_marginTop="63dp"
        android:layout_alignRight="@+id/next"
        android:layout_alignEnd="@+id/next"
        android:height="80dp"
        android:textSize="35dp"
        android:onClick="onClickClear"
        android:theme="@style/RtlOverlay.Widget.AppCompat.SearchView.MagIcon"
        android:textColor="#000dff"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:background="#ffc260" />
</RelativeLayout>
